{
    "name": "nitrado.js",
    "version": "0.1.16",
    "license": "GPL-3.0",
    "main": "index.js",
    "module": "index.mjs",
    "exports": {
        ".": {
            "require": "./index.js",
            "import": "./index.mjs"
        }
    },
    "author": "cainthebest <https://github.com/cainthebest> & Contributors",
    "description": "A type safe wrapper for the Nitrado API",
    "repository": {
        "type": "git",
        "url": "https://github.com/cainthebest/nitrado.js"
    },
    "bugs": {
        "url": "https://github.com/cainthebest/nitrado.js/issues"
    },
    "keywords": [
        "nitrapi",
        "Nitrado",
        "Nitrado API",
        "axios",
        "nodejs",
        "javascript",
        "typescript"
    ],
    "files": [
        "dist",
        "LICENSE",
        "CHANGELOG.md",
        "README.md"
    ],
    "scripts": {
        "build": "run-s build:*",
        "build:format": "prettier --write **/**.{ts,json,md,yaml,yml}",
        "build:lint": "eslint . --ext .ts --fix",
        "build:bundle": "tsup-node"
    },
    "prettier": {
        "quoteProps": "as-needed",
        "arrowParens": "always",
        "trailingComma": "all",
        "singleQuote": true,
        "useTabs": false,
        "tabWidth": 4,
        "semi": true
    },
    "eslintConfig": {
        "root": true,
        "parser": "@typescript-eslint/parser",
        "parserOptions": {
            "tsconfigRootDir": ".",
            "project": [
                "./tsconfig.json"
            ]
        },
        "extends": [
            "eslint:recommended",
            "plugin:@typescript-eslint/eslint-recommended",
            "prettier"
        ]
    },
    "dependencies": {
        "axios": "^0.27.2"
    },
    "devDependencies": {
        "@types/node": "^18.0.0",
        "@typescript-eslint/eslint-plugin": "^5.23.0",
        "@typescript-eslint/parser": "^5.23.0",
        "eslint-config-prettier": "^8.5.0",
        "npm-run-all": "^4.1.5",
        "typescript": "^4.6.4",
        "prettier": "^2.6.2",
        "eslint": "^8.15.0",
        "tsup": "^6.0.1"
    }
}
